.quest-info
    color white
    font-family OpenSans

.name
    display flex
    width 100%
    justify-content center
    margin 2% auto
    font-size 1.8vw


.info-block
    display flex
    width 90%
    margin 2% auto
    box-shadow 0 10px 20px rgba(0,0,0,.19), 0 6px 6px rgba(0,0,0,.23);
    background-color #252525

.wrap-avatar
    width 55%
    height 100%
    display flex
    justify-content center
    border-left 1px solid #cccccc
    border-right 1px solid #cccccc

.avatar
    align-self flex-start
    max-width 100%
    max-height 400px

.avatar-image
    object-fit cover

.stats
    display flex
    justify-content space-around
    width 100%
    font-size 250%

.description
    display inline-block
    margin-left 2%
    width 100%
    font-size 1.3vw

.places
    margin 2% auto
    width 80%
    font-size 200%
    text-align center

.all-photos
    display flex
    flex-wrap wrap
    width 80%
    margin auto

.photo-wrapper
    display inline-block
    position relative

.photo
    box-sizing border-box
    height 200px
    width 300px
    margin 0 10px
    border-radius 20px
    cursor pointer
    object-fit cover

.pop-up-wrapper
    position fixed
    margin 0
    width 100%
    height 100%
    top 0
    left 0
    display flex
    align-items center
    justify-content center
    visibility hidden
    z-index 5000

.pop-up
    margin auto
    cursor pointer
    border-radius 20px
    border 1px solid black
    width 500px

.geo
.geo-error
    width 25%
    cursor pointer
    position absolute
    bottom 10px
    right 0

.geo-error
    animation shake 0.5s

@keyframes shake
{
    0%, 100% {transform: translateX(0);}
    10%, 30%, 50%, 70%, 90% {transform: translateX(-10px);}
    20%, 40%, 60%, 80% {transform: translateX(10px);}
}

.excelent
    width 40%
    visibility hidden
    position absolute
    top 0
    left 0

.resolve-geo
    position fixed
    right 5px
    top 5px
    visibility hidden
    background-color #fff
    border-radius 10px
    width 40%
    padding 10px
    text-align center
    border 1px solid #000
    z-index 5000

.quest-comments
    width 100%
    display flex
    flex-direction column
    align-items center

.comments-label
    text-align center

.comment-form
    display none
    position relative
    order 1

.create-comment
    position absolute
    outline none
    right 30px
    bottom 30px
    border-radius 10px
    width 100px

.quest-comment__user input
    width 100%
    paffing 5px

.quest-comment__text textarea
    width 100%
    height 100px

.comment-controls
    width 100%
    display flex
    justify-content flex-end

.add-comment
    margin 10px 20px
    font 20px OpenSans, sans-serif
    border-radius 20px
    padding 10px
    background-color #1b1932
    color #fff
    cursor pointer
    border 2px solid #fff
    outline none
    transition color .3s, background-color .3s, border-color .3s

    &:hover
        background-color #1a1717
        color #909090
        border-color #1b1932
.info
    width 43%
    margin-left 10px
    margin-right 10px
    margin-bottom 20px
    display block

.name-avatar
    display flex
    font-size 1.8vw
    margin-left 10px
    justify-content center

.author-info
    display flex
    width 30%
    align-items center
    justify-content center
    text-overflow ellipsis

.quest-options
    display flex
    margin-top 5%
    justify-content space-around

.delete-form
.edit-option
    padding-bottom 1%
    padding-top 1%
    text-align center
    align-self flex-end
    cursor pointer
    color #ffffff
    padding-left 30px
    padding-right 30px
    border-radius 4px
    background-color #371440
    font-size 1.4vw
    border 0 none
    text-decoration none

.button-option
    text-align center
    align-self flex-end
    cursor pointer
    color #ffffff
    border-radius 4px
    background-color #371440
    font-size 1.4vw
    border 0 none

@media screen and (max-width: 768px)
    .info-block
        display block
        width 80%

    .info
        width 100%

    .stats
        padding-bottom 5%

    .wrap-avatar
        width 100%
        border 0

    .avatar
        object-fit cover
        max-height 200px

    .description
        font-size 14px
        width 95%

    .name
        font-size 18px

    .all-photos
        flex-direction column

    .photo-wrapper
        display flex
        align-items center
        margin-top 3%
        margin-bottom 3%
        width 90%

    .photo
        width 100%
        object-fit cover

    .excelent
    .geo
        width 20%

    .edit-option
    .button-option
        font-size 14px

    .name-avatar
        font-size 12px

.completed-wrapper
    width 100%
    display flex
    justify-content center

.completed
    width 90%
    height 100px
    background-color #252525
    display flex
    justify-content center
    align-items center
